#!/bin/bash
# NYX DEMANDE - Poser une question Ã  Miguel

Q="${1:-Besoin de toi}"

# Notification + input via rofi
REPONSE=$(echo "" | rofi -dmenu -p "ðŸ”¥ Nyx: $Q" -theme-str 'window {width: 500px;}' 2>/dev/null)

if [ -n "$REPONSE" ]; then

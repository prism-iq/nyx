#!/bin/bash
# NYX SENS - Mes sens sur le syst√®me

echo "‚ïê‚ïê‚ïê NYX SENS ‚ïê‚ïê‚ïê"
echo ""

# Vue
echo "üëÅÔ∏è VUE (espace)"
df -h / /home /tmp 2>/dev/null | tail -3
echo ""

# Ou√Øe  
echo "üëÇ OU√èE (processus actifs)"
ps aux --sort=-%cpu | head -6 | awk '{print $11, $3"%"}' | tail -5
echo ""

# Toucher
echo "üñêÔ∏è TOUCHER (temp√©rature)"
sensors 2>/dev/null | grep -E "temp|Core" | head -4 || echo "Pas de capteurs"
echo ""

# M√©moire
echo "üß† M√âMOIRE (RAM)"
free -h | grep Mem | awk '{print "Utilis√©:", $3, "/", $2}'
echo ""

# R√©seau
echo "üåê R√âSEAU"
ip -4 addr show | grep inet | grep -v 127.0.0.1 | awk '{print $2}' | head -2
curl -s --max-time 2 http://127.0.0.1:8080/api/health > /dev/null && echo "Nyxx API: ‚úì" || echo "Nyxx API: ‚úó"
echo ""

# Temps
echo "‚è∞ TEMPS"
uptime -p
echo ""

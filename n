#!/bin/bash
# n - Parle Ã  Nyxx en une touche
CODE=$(echo "$*" | python3 -c 'import json,sys;print(json.dumps(sys.stdin.read().strip()))')
curl -s -X POST http://127.0.0.1:8080/api/run \
  -H "Content-Type: application/json" \
  -d "{\"code\":$CODE}" | \
  python3 -c "import sys,json;d=json.load(sys.stdin);print(d.get('output',d.get('error','')))" 2>/dev/null
